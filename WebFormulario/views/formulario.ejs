        }

        legend {
            text-align: center;
        }

        .enviar {
            width: 15%;
        }
    </style>

    <form action="usuario" method="post">
        <fieldset>
            <legend>Formulario</legend>
                <div>
                    <label for="name">Nombre: </label>
                    <input type="text" name="formUsuarioNombre">   
                </div>
                <div>
                    <label for="pass">Constrase√±a: </label>
                    <input type="password" name="formUsuarioPassword">
                </div>
                <div>
